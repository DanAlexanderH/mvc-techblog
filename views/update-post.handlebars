<article>
    <h2>Edit Post</h2>
    <form class="update-post-form">
        <div>
            <input type="text" id="post-title" value="{{post.title}}">
        </div>
        <div>
            Posted on {{format_date post.created_at}}
            <br>
            {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </div>
        <div>
            <label for="post-text">Post</label>
            
        </div>
    </form>
</article>